{
  "name": "neuroplay-frontend",
  "version": "1.0.0",
  "private": true,
  "homepage": ".",
  "dependencies": {
    "@react-three/drei": "^9.92.7",
    "@react-three/fiber": "^8.15.12",
    "@react-three/postprocessing": "^2.16.0",
    "@react-three/rapier": "^1.2.1",
    "@tensorflow/tfjs": "^4.15.0",
    "axios": "^1.6.2",
    "framer-motion": "^10.16.16",
    "gsap": "^3.12.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0",
    "recharts": "^2.10.3",
    "three": "^0.160.0",
    "tone": "^14.7.77",
    "uuid": "^9.0.1",
    "zustand": "^4.4.7"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build && npm run generate-sw",
    "generate-sw": "workbox generateSW workbox-config.js",
    "test": "react-scripts test --passWithNoTests",
    "test:coverage": "react-scripts test --watchAll=false --coverage",
    "test:ci": "react-scripts test --watchAll=false --coverage --maxWorkers=2",
    "eject": "react-scripts eject",
    "lint": "eslint src --ext .js,.jsx --max-warnings=50",
    "lint:fix": "eslint src --ext .js,.jsx --fix",
    "audit:a11y": "axe http://localhost:3000 --save audit-axe.json",
    "audit:lighthouse": "lighthouse http://localhost:3000 --output=json --output-path=./audit-lighthouse.json --only-categories=accessibility",
    "audit:all": "npm run audit:a11y && npm run audit:lighthouse"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.6.1",
    "ajv": "^6.12.6",
    "ajv-keywords": "^3.5.2",
    "react-scripts": "5.0.1",
    "workbox-cli": "^7.4.0",
    "workbox-webpack-plugin": "^7.4.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  }
}
