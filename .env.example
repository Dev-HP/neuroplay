# NeuroPlay 2.5 - Environment Variables
# Copie para .env e preencha com valores reais

# ============================================
# BACKEND
# ============================================

# Flask
FLASK_ENV=production
SECRET_KEY=your-super-secret-key-change-this-in-production
DEBUG=False

# Database
DATABASE_URL=postgresql://neuroplay:password@localhost:5432/neuroplay
POSTGRES_PASSWORD=your-postgres-password

# Redis
REDIS_URL=redis://localhost:6379/0

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Sentry (Monitoramento)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=production
SENTRY_ORG=your-org
SENTRY_AUTH_TOKEN=your-auth-token

# CORS
CORS_ORIGINS=https://neuroplay.app,https://www.neuroplay.app

# Rate Limiting
RATE_LIMIT_STORAGE_URL=redis://localhost:6379/1

# Git (para tracking de releases)
GIT_COMMIT=${GITHUB_SHA}

# ============================================
# FRONTEND
# ============================================

REACT_APP_API_URL=https://api.neuroplay.app
REACT_APP_SENTRY_DSN=https://your-frontend-sentry-dsn@sentry.io/project-id
REACT_APP_ENVIRONMENT=production

